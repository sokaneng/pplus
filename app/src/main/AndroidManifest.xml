<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.fireant.pplus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".views.main.MainAct"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.inventory.category.CategoryAct"
            android:parentActivityName=".views.main.MainAct"
            android:screenOrientation="portrait"
            android:label="@string/category"
            android:theme="@style/Theme.AppCompat" />

        <activity android:name=".views.inventory.category.CategoryAddAct"
            android:parentActivityName=".views.inventory.category.CategoryAct"
            android:screenOrientation="portrait"
            android:label="@string/add_category"
            android:theme="@style/Theme.AppCompat"/>

        <activity android:name=".views.inventory.product.ProductAct"
            android:parentActivityName=".views.main.MainAct"
            android:screenOrientation="portrait"
            android:label="@string/product"
            android:theme="@style/Theme.AppCompat"/>

        <activity android:name=".views.inventory.product.ProductAddAct"
            android:parentActivityName=".views.inventory.product.ProductAct"
            android:screenOrientation="portrait"
            android:label="@string/add_product"
            android:theme="@style/Theme.AppCompat"/>

        <activity android:name=".views.stock.StockAddAct"
            android:parentActivityName=".views.main.MainAct"
            android:screenOrientation="portrait"
            android:label="@string/add_stock"
            android:theme="@style/Theme.AppCompat"/>

        <activity android:name=".views.inventory.product.ProductSelectionAct"
            android:parentActivityName=".views.stock.StockAddAct"
            android:screenOrientation="portrait"
            android:label="@string/product_selection"
            android:theme="@style/Theme.AppCompat"/>

        <activity android:name=".views.inventory.product.ProductDetailAct"
            android:parentActivityName=".views.main.MainAct"
            android:screenOrientation="portrait"
            android:label="@string/product_detail"
            android:theme="@style/Theme.AppCompat"/>

    </application>
</manifest>
